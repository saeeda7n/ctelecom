---
interface Props {
  icon: string;
  title: string;
}
const { title, icon } = Astro.props;
---

<div class="flex h-full flex-col gap-1 rounded-xl bg-gray-100 px-5 pb-7 pt-3">
  <div class="flex items-center gap-2 text-gray-500">
    <i class="text-sm" class:list={[icon]}></i>
    <h3 class="font-light">{title}</h3>
  </div>
  <div
    class="flex h-full text-justify text-xl font-semibold text-gray-500 lg:items-center lg:justify-center lg:text-2xl"
  >
    <slot />
  </div>
</div>
